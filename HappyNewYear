            color: #ffcc00;
            font-weight: 500;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        
        input {
            width: 100%;
            padding: 16px 20px;
            border-radius: 12px;
            border: 2px solid rgba(255, 255, 255, 0.1);
            background: rgba(10, 10, 20, 0.7);
            color: #f0f0f0;
            font-size: 1.1rem;
            transition: all 0.3s;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        
        input:focus {
            outline: none;
            border-color: #ff3366;
            box-shadow: 0 0 20px rgba(255, 51, 102, 0.4);
            background: rgba(15, 15, 25, 0.8);
        }
        
        button {
            background: linear-gradient(45deg, #ff3366, #ff9900);
            color: white;
            border: none;
            padding: 18px 45px;
            font-size: 1.3rem;
            border-radius: 12px;
            cursor: pointer;
            transition: all 0.3s;
            font-weight: bold;
            letter-spacing: 1px;
            margin-top: 15px;
            box-shadow: 0 5px 20px rgba(255, 51, 102, 0.4);
            position: relative;
            overflow: hidden;
            z-index: 1;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        
        button::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(45deg, #ff9900, #ff3366);
            transition: left 0.5s;
            z-index: -1;
        }
        
        button:hover::before {
            left: 0;
        }
        
        button:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(255, 51, 102, 0.6);
        }
        
        button:active {
            transform: translateY(1px);
        }
        
        /* Animation Container */
        .animation-container {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: 100;
        }
        
        .greeting {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            z-index: 150;
            text-align: center;
            width: 100%;
            padding: 20px;
        }
        
        .new-year-text {
            font-size: 5.5rem;
            font-weight: bold;
            margin-bottom: 30px;
            text-shadow: 0 0 30px rgba(255, 255, 255, 0.3);
            background: linear-gradient(45deg, #ff3366, #ffcc00, #33ccff, #00ff99);
            -webkit-background-clip: text;
            background-clip: text;
            color: transparent;
            letter-spacing: 2px;
            min-height: 140px;
            display: flex;
            justify-content: center;
            align-items: center;
            font-family: 'Dancing Script', cursive;
        }
        
        .typing-text {
            border-right: 5px solid #ffcc00;
            padding-right: 15px;
            animation: blinkCursor 0.7s infinite;
            white-space: nowrap;
            overflow: hidden;
            display: inline-block;
        }
        
        .handwriting-font {
            font-family: 'Dancing Script', cursive;
            font-weight: 700;
        }
        
        .personalized-greeting {
            font-size: 3.5rem;
            color: #ffcc00;
            margin-top: 20px;
            text-shadow: 0 0 20px rgba(255, 204, 0, 0.5);
            animation: fadeInOut 4s infinite;
            font-weight: 600;
            font-family: 'Great Vibes', cursive;
        }
        
        /* Fireworks */
        .firework {
            position: absolute;
            width: 6px;
            height: 6px;
            border-radius: 50%;
            box-shadow: 0 0 12px 3px;
            z-index: 50;
        }
        
        .explosion {
            position: absolute;
            border-radius: 50%;
            opacity: 0;
            z-index: 50;
        }
        
        /* Simple Back Button */
        .back-button {
            position: absolute;
            bottom: 40px;
            left: 50%;
            transform: translateX(-50%);
            z-index: 200;
            background: rgba(20, 20, 30, 0.8);
            color: #ffcc00;
            border: 2px solid rgba(255, 204, 0, 0.3);
            padding: 12px 30px;
            border-radius: 50px;
            cursor: pointer;
            font-size: 1.1rem;
            font-weight: 600;
            transition: all 0.3s;
            backdrop-filter: blur(10px);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        
        .back-button:hover {
            background: rgba(255, 204, 0, 0.1);
            border-color: rgba(255, 204, 0, 0.6);
            box-shadow: 0 0 20px rgba(255, 204, 0, 0.3);
        }
        
        /* Font Options Panel */
        .font-options {
            margin-top: 20px;
            background: rgba(255, 255, 255, 0.05);
            padding: 15px;
            border-radius: 10px;
            display: flex;
            justify-content: center;
            gap: 15px;
            flex-wrap: wrap;
        }
        
        .font-btn {
            background: rgba(255, 255, 255, 0.1);
            border: 1px solid rgba(255, 255, 255, 0.2);
            color: #fff;
            padding: 8px 15px;
            border-radius: 8px;
            cursor: pointer;
            transition: all 0.3s;
            font-size: 0.9rem;
        }
        
        .font-btn:hover {
            background: rgba(255, 255, 255, 0.2);
            transform: translateY(-2px);
        }
        
        .font-btn.active {
            background: rgba(255, 204, 0, 0.3);
            border-color: #ffcc00;
            box-shadow: 0 0 10px rgba(255, 204, 0, 0.3);
        }
        
        /* Animations */
        @keyframes blinkCursor {
            0%, 100% { border-color: transparent; }
            50% { border-color: #ffcc00; }
        }
        
        @keyframes textGlow {
            0% {
                filter: drop-shadow(0 0 15px rgba(255, 51, 102, 0.7));
                transform: scale(1);
            }
            50% {
                filter: drop-shadow(0 0 25px rgba(255, 204, 0, 0.7));
                transform: scale(1.03);
            }
            100% {
                filter: drop-shadow(0 0 15px rgba(51, 204, 255, 0.7));
                transform: scale(1);
            }
        }
        
        @keyframes fadeInOut {
            0%, 100% {
                opacity: 0.8;
                transform: translateY(0);
            }
            50% {
                opacity: 1;
                transform: translateY(-5px);
            }
        }
        
        /* Star Background */
        .stars {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            pointer-events: none;
            z-index: 1;
        }
        
        .star {
            position: absolute;
            background-color: #fff;
            border-radius: 50%;
            animation: twinkle 5s infinite;
        }
        
        @keyframes twinkle {
            0%, 100% { opacity: 0.2; }
            50% { opacity: 1; }
        }
        
        /* Responsive */
        @media (max-width: 768px) {
            h1 {
                font-size: 2.2rem;
            }
            
            .new-year-text {
                font-size: 4.2rem;
                min-height: 110px;
            }
            
            .personalized-greeting {
                font-size: 2.8rem;
            }
            
            .form-container {
                padding: 30px 20px;
            }
            
            button {
                padding: 16px 35px;
                font-size: 1.1rem;
            }
            
            .font-options {
                gap: 10px;
            }
        }
        
        @media (max-width: 480px) {
            h1 {
                font-size: 1.9rem;
            }
            
            .new-year-text {
                font-size: 3.2rem;
                min-height: 90px;
            }
            
            .personalized-greeting {
                font-size: 2.2rem;
            }
            
            button {
                padding: 15px 30px;
                font-size: 1.1rem;
            }
            
            .back-button {
                padding: 10px 25px;
                font-size: 1rem;
            }
            
            .font-options {
                flex-direction: column;
                align-items: center;
            }
