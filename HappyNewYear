<body>
    <!-- Star Background -->
    <div class="stars" id="stars"></div>
    
    <div class="container">
        <div class="form-container" id="formContainer">
            <h1>Happy New Year 2026</h1>
            <p class="subtitle">Enter your name and choose a font style for your personalized celebration</p>
            
            <div class="input-group">
                <label for="name"><i class="fas fa-user"></i> Your Name</label>
                <input type="text" id="name" placeholder="Enter your name" required autofocus>
            </div>
            
            <div class="font-options">
                <span style="color: #ffcc00; margin-right: 10px;">Font Style:</span>
                <button class="font-btn active" data-font="Dancing Script">Dancing Script</button>
                <button class="font-btn" data-font="Great Vibes">Great Vibes</button>
                <button class="font-btn" data-font="Pacifico">Pacifico</button>
                <button class="font-btn" data-font="Satisfy">Satisfy</button>
                <button class="font-btn" data-font="Yellowtail">Yellowtail</button>
            </div>
            
            <button id="nextButton">
                <i class="fas fa-fireworks"></i> Launch Fireworks
            </button>
        </div>
        
        <div class="animation-container" id="animationContainer">
            <div class="greeting">
                <div class="new-year-text" id="typingText"></div>
                <div class="personalized-greeting" id="personalizedGreeting"></div>
            </div>
            
            <button class="back-button" id="backButton">
                <i class="fas fa-redo"></i> Start Again
            </button>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const formContainer = document.getElementById('formContainer');
            const animationContainer = document.getElementById('animationContainer');
            const nextButton = document.getElementById('nextButton');
            const backButton = document.getElementById('backButton');
            const nameInput = document.getElementById('name');
            const personalizedGreeting = document.getElementById('personalizedGreeting');
            const typingText = document.getElementById('typingText');
            const starsContainer = document.getElementById('stars');
            const fontButtons = document.querySelectorAll('.font-btn');
            
            // Text to type
            const newYearText = "Happy New Year 2026!";
            let typingSpeed = 120; // milliseconds per character
            let selectedFont = 'Dancing Script';
            
            // Font families mapping
            const fontFamilies = {
                'Dancing Script': "'Dancing Script', cursive",
                'Great Vibes': "'Great Vibes', cursive",
                'Pacifico': "'Pacifico', cursive",
                'Satisfy': "'Satisfy', cursive",
                'Yellowtail': "'Yellowtail', cursive"
            };
            
            // Set up font selection buttons
            fontButtons.forEach(btn => {
                btn.addEventListener('click', function() {
                    fontButtons.forEach(b => b.classList.remove('active'));
                    this.classList.add('active');
                    selectedFont = this.dataset.font;
                });
            });
            
            // Create star background
            function createStars() {
                for (let i = 0; i < 150; i++) {
                    const star = document.createElement('div');
                    star.className = 'star';
                    star.style.width = Math.random() * 3 + 'px';
                    star.style.height = star.style.width;
                    star.style.left = Math.random() * 100 + '%';
                    star.style.top = Math.random() * 100 + '%';
                    star.style.animationDelay = Math.random() * 5 + 's';
                    starsContainer.appendChild(star);
                }
            }
            
            createStars();
            
            // Array to keep track of active fireworks for cleanup
            let activeFireworks = [];
            let animationActive = false;
            
            // Typing animation function with cursive style
            function typeWriter(text, element, speed) {
                return new Promise((resolve) => {
                    let i = 0;
                    element.innerHTML = '';
                    element.classList.add('typing-text');
                    element.style.fontFamily = fontFamilies[selectedFont];
                    
                    // Set a slightly different speed for cursive to feel more natural
                    const cursiveSpeed = speed * 0.9;
                    
                    function type() {
                        if (i < text.length) {
                            // Add the next character
                            element.innerHTML += text.charAt(i);
                            i++;
                            
                            // Add a slight delay for spaces to simulate thinking in handwriting
                            const delay = text.charAt(i-1) === ' ' ? cursiveSpeed * 1.5 : cursiveSpeed;
                            
                            // Occasionally add a slightly longer delay to simulate handwriting pauses
                            const randomDelay = Math.random() > 0.9 ? cursiveSpeed * 2 : 0;
                            
                            setTimeout(type, delay + randomDelay);
                        } else {
                            element.classList.remove('typing-text');
                            // After typing is complete, start the glow animation
                            element.style.animation = 'textGlow 3s infinite alternate';
                            resolve();
                        }
                    }
                    
                    type();
                });
            }
            
            // Function to create a firework
            function createFirework(x, y, color) {
                // Create the shooting firework
                const firework = document.createElement('div');
                firework.className = 'firework';
                firework.style.left = x + 'px';
                firework.style.top = window.innerHeight + 'px';
                firework.style.backgroundColor = color;
                firework.style.boxShadow = `0 0 12px 3px ${color}`;
                animationContainer.appendChild(firework);
                activeFireworks.push(firework);
                
                // Animate shooting up
                const shootAnimation = firework.animate([
                    { transform: `translateY(${window.innerHeight}px)`, opacity: 1 },
                    { transform: `translateY(${y}px)`, opacity: 1 }
                ], {
                    duration: 800 + Math.random() * 400,
                    easing: 'cubic-bezier(0.1, 0.8, 0.2, 1)'
                });
                
                // When shooting animation completes, explode
                shootAnimation.onfinish = () => {
                    firework.remove();
                    activeFireworks = activeFireworks.filter(f => f !== firework);
                    createExplosion(x, y, color);
                };
            }
            
            // Function to create explosion
            function createExplosion(x, y, color) {
                const explosion = document.createElement('div');
                explosion.className = 'explosion';
                explosion.style.left = x + 'px';
                explosion.style.top = y + 'px';
                explosion.style.backgroundColor = color;
                explosion.style.width = '5px';
                explosion.style.height = '5px';
                animationContainer.appendChild(explosion);
                activeFireworks.push(explosion);
                
                // Animate explosion
                const explodeAnimation = explosion.animate([
                    { transform: 'scale(0)', opacity: 1 },
                    { transform: 'scale(1.8)', opacity: 0 }
                ], {
                    duration: 1200,
                    easing: 'cubic-bezier(0.1, 0.8, 0.2, 1)'
                });
                
                // Remove explosion after animation
                explodeAnimation.onfinish = () => {
                    explosion.remove();
                    activeFireworks = activeFireworks.filter(f => f !== explosion);
                };
                
                // Create smaller particles
                const particleCount = 40 + Math.floor(Math.random() * 30);
                for (let i = 0; i < particleCount; i++) {
                    createParticle(x, y, color);
                }
            }
            
            // Function to create particles for explosion
            function createParticle(x, y, color) {
                const particle = document.createElement('div');
                particle.className = 'firework';
                particle.style.left = x + 'px';
                particle.style.top = y + 'px';
                particle.style.backgroundColor = color;
                particle.style.boxShadow = `0 0 8px 2px ${color}`;
                particle.style.width = '4px';
                particle.style.height = '4px';
                animationContainer.appendChild(particle);
                activeFireworks.push(particle);
                
                // Random direction and distance
                const angle = Math.random() * Math.PI * 2;
                const distance = 40 + Math.random() * 120;
                const targetX = x + Math.cos(angle) * distance;
                const targetY = y + Math.sin(angle) * distance;
                
                // Animate particle
                const particleAnimation = particle.animate([
                    { transform: 'translate(0, 0)', opacity: 1 },
                    { transform: `translate(${targetX - x}px, ${targetY - y}px)`, opacity: 0 }
                ], {
                    duration: 800 + Math.random() * 800,
                    easing: 'cubic-bezier(0.1, 0.8, 0.2, 1)'
                });
                
                // Remove particle after animation
                particleAnimation.onfinish = () => {
                    particle.remove();
                    activeFireworks = activeFireworks.filter(f => f !== particle);
                };
            }
            
            // Function to launch a random firework
            function launchRandomFirework() {
                if (!animationActive) return;
                
                const x = 100 + Math.random() * (window.innerWidth - 200);
                const y = 100 + Math.random() * (window.innerHeight - 300);
                
                // Random color with dark theme emphasis
                const colors = ['#ff3366', '#ff9900', '#ffcc00', '#33ccff', '#00ff99', '#cc66ff', '#ff6666'];
                const color = colors[Math.floor(Math.random() * colors.length)];
                
                createFirework(x, y, color);
                
                // Schedule next firework randomly between 0.5 and 1.5 seconds
                if (animationActive) {
                    setTimeout(launchRandomFirework, 500 + Math.random() * 1000);
                }
            }
            
            // Function to start the animation
            async function startAnimation() {
                const name = nameInput.value.trim();
                
                // Validate input
                if (!name) {
                    alert('Please enter your name.');
                    return;
                }
                
                // Hide form and show animation
                formContainer.style.display = 'none';
                animationContainer.style.display = 'block';
                
                // Apply selected font to the greeting text
                typingText.style.fontFamily = fontFamilies[selectedFont];
                
                // Start typing animation
                await typeWriter(newYearText, typingText, typingSpeed);
                
                // Set personalized greeting after typing is complete
                personalizedGreeting.textContent = `Wishing ${name} an amazing 2026!`;
                personalizedGreeting.style.fontFamily = selectedFont === 'Dancing Script' ? "'Great Vibes', cursive" : fontFamilies[selectedFont];
                
                // Start unlimited fireworks
                animationActive = true;
                
                // Launch initial fireworks
                for (let i = 0; i < 3; i++) {
                    setTimeout(() => {
                        launchRandomFirework();
                    }, i * 300);
                }
                
                // Start continuous fireworks
                setTimeout(launchRandomFirework, 1000);
                
                // Start ambient particles
                createAmbientParticles();
            }
            
            // Function to stop animation and go back to form
            function stopAnimation() {
                animationActive = false;
                
                // Remove all active fireworks
                activeFireworks.forEach(firework => {
                    if (firework.parentNode) {
                        firework.parentNode.removeChild(firework);
                    }
                });
                activeFireworks = [];
                
                // Reset typing text
                typingText.innerHTML = '';
                typingText.style.animation = '';
                typingText.style.fontFamily = fontFamilies['Dancing Script'];
                
                // Clear personalized greeting
                personalizedGreeting.textContent = '';
                personalizedGreeting.style.fontFamily = "'Great Vibes', cursive";
                
                // Show form and hide animation
                formContainer.style.display = 'block';
                animationContainer.style.display = 'none';
                
                // Reset form
                nameInput.value = '';
                nameInput.focus();
                
                // Reset font selection
                fontButtons.forEach(b => b.classList.remove('active'));
                document.querySelector('.font-btn[data-font="Dancing Script"]').classList.add('active');
                selectedFont = 'Dancing Script';
            }
            
            // Event listeners
            nextButton.addEventListener('click', startAnimation);
            backButton.addEventListener('click', stopAnimation);
            
            // Also allow Enter key to submit
            nameInput.addEventListener('keypress', function(e) {
                if (e.key === 'Enter') startAnimation();
            });
            
            // Create ambient particles in the background
            function createAmbientParticles() {
                if (!animationActive) return;
                
                const particle = document.createElement('div');
                particle.className = 'firework';
                particle.style.left = Math.random() * window.innerWidth + 'px';
                particle.style.top = window.innerHeight + 'px';
                
                const colors = ['rgba(255, 51, 102, 0.3)', 'rgba(255, 204, 0, 0.3)', 'rgba(51, 204, 255, 0.3)'];
                const color = colors[Math.floor(Math.random() * colors.length)];
                
                particle.style.backgroundColor = color;
                particle.style.boxShadow = `0 0 8px 2px ${color}`;
                particle.style.width = '3px';
                particle.style.height = '3px';
                animationContainer.appendChild(particle);
                activeFireworks.push(particle);
                
                // Slow floating animation
                const floatAnimation = particle.animate([
                    { transform: 'translate(0, 0)', opacity: 0.6 },
                    { transform: `translate(${Math.random() * 100 - 50}px, ${-100 - Math.random() * 200}px)`, opacity: 0 }
                ], {
                    duration: 3000 + Math.random() * 4000,
                    easing: 'ease-in'
                });
                
                floatAnimation.onfinish = () => {
                    particle.remove();
                    activeFireworks = activeFireworks.filter(f => f !== particle);
                };
                
                // Schedule next ambient particle
                if (animationActive) {
                    setTimeout(createAmbientParticles, 200 + Math.random() * 800);
                }
            }
            
            // Auto-focus on name input when page loads
            nameInput.focus();
        });
    </script>
</body>
</html>
